---
import {  MemberAttributes } from '../types';
import CMSImage from './CMSImage.astro';


interface Props {
  member: MemberAttributes
  func: string;
}

const { member, func } = Astro.props;

const name = `${member.firstName} ${member.lastName}`;
---

<div class="flex flex-col gap-4 items-center">
  <CMSImage
    height={64 * 16}
    aspectRatio="4:3"
    image={member.image.data.attributes}
    alt={name}
  />

  <div class="text-white flex flex-col items-center">
    <p class="pb-1 font-display font-bold tracking-widest">{name}</p>
    <p class="text-sm font-serif">{func}</p>
  </div>
</div>
